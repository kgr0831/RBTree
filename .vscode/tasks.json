{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-and-test",
            "type": "shell",
            "command": "cd ${workspaceFolder}/rbtree_lab && make -C test test-rbtree",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/rbtree_lab"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cd ${workspaceFolder}/rbtree_lab && make clean",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/rbtree_lab"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 활성 파일 빌드",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "디버거에서 생성된 작업입니다."
        }
    ]
}